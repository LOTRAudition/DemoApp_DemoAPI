@model DemoApp_Web.Models.VM.DemoNumberCreateVM

<form asp-action="CreateDemoNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Demo</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="DemoNumber.DemoNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DemoNumber.DemoNo" class="form-control" />
                <span asp-validation-for="DemoNumber.DemoNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="DemoNumber.DemoID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="DemoNumber.DemoID" class="form-select" asp-items="@Model.DemoList">
                    <option disabled selected>--Select Demo--</option>
                </select>
                <span asp-validation-for="DemoNumber.DemoID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="DemoNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="DemoNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="DemoNumber.SpecialDetails" class="text-danger"></span>
            </div>
           
            <div class="col-5 offset-2">
                <a asp-action="IndexDemoNumber" asp-controller="DemoNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
