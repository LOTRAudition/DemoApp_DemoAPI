@model DemoApp_Web.Models.VM.DemoNumberDeleteVM

<form asp-action="DeleteDemoNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Demo</h1>
        <hr />
        <input hidden asp-for="DemoNumber.DemoNo" />
        <div class="row">

            <div class="col-2">
                <label asp-for="DemoNumber.DemoNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DemoNumber.DemoNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="DemoNumber.DemoID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="DemoNumber.DemoID" disabled class="form-select" asp-items="@Model.DemoList">
                    <option disabled selected>--Select Demo--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="DemoNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="DemoNumber.SpecialDetails" readonly class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexDemoNumber" asp-controller="DemoNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
